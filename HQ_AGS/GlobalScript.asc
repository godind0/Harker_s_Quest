function musicFirstSetup(AudioClip* newMusic, int thisID)
{
  bgMusic = newMusic.Play();
  bgMusic.Volume = 20;
  playingMusic = thisID;
}

function musicInRoom(AudioClip* newMusic, int thisID)
{
  if(playingMusic != thisID)
  {
    if(bgMusic.IsPlaying)
    {
      bgMusic.Stop();
    }
    bgMusic = newMusic.Play();
